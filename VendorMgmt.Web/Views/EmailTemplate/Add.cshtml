@model VendorMgmt.DataAccess.Model.EmailTemplate
@{
    ViewBag.Title = "Edit Template";
    ViewBag.Page = "emailtemplate";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Add", "EmailTemplate", FormMethod.Post, new { @class = "form-horizontal form-bordered", enctype = "multipart/form-data", onsubmit = "showLoader(this);", @novalidate = "novalidate" }))
                {
                    if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <strong>@TempData["Message"]</strong>
                        </div>
                    }
                    if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <strong>@TempData["Error"]</strong>
                        </div>
                    }
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="input-placeholder" class="require"><strong>Template Name</strong></label>
                                @Html.TextBoxFor(c => c.Name, new { @class = "form-control form-control-sm", @required = "", @readonly = "readonly" , @style = "width:100%;" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="input-placeholder" class="require"><strong>Sender Name</strong></label>
                                @Html.TextBoxFor(c => c.SenderName, new { @class = "form-control form-control-sm", @required = "", @style = "width:100%;" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="input-placeholder"><strong>Sender Email</strong></label>
                                @Html.TextBoxFor(c => c.SenderEmail, new { @class = "form-control form-control-sm", @required = "", @style = "width:100%;" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="input-placeholder"><strong>Email Subject</strong></label>
                                @Html.TextBoxFor(c => c.EmailSubject, new { @class = "form-control form-control-sm", @required = "", @style = "width:100%;" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="form-group">
                                <label for="input-placeholder"><strong>Email Body</strong></label>
                                @Html.TextAreaFor(c => c.EmailBody, new { @class = "form-control summernote", @required = "", @style = "width:100%;" })
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label for="input-placeholder">
                                    Placeholders
                                </label>
                                <strong>
                                    <ul>
                                        <li>{ShortUrl}</li>
                                        <li>{CompanyName}</li>
                                        <li>{RegCode}</li>
                                        <li>{DofascoContact}</li>
                                    </ul>
                                </strong>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" id="submitemailtemplate" name="submitemailtemplate" value="Save" class="btn btn-cyan" />
                            <a href="~/EmailTemplate" class="mb-xs mt-xs mr-xs btn btn-danger">Cancel</a>
                        </div>
                    </div>

                }
            </div>
        </section>
    </div>
</div>
@section scripts{
   

    <script type="text/javascript">

        $(document).ready(function () {
            // summernote editor
            $('.summernote').summernote({
                height: 300,
                toolbar: [
                    // [groupName, [list of button]]
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['fontname', ['fontname']],
                    ['picture', ['picture', 'link', 'table', 'hr']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['height', ['height']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });
        });

    </script>


}



