@model VendorMgmt.DataAccess.Model.EmailTemplateViewModel
@{
    ViewBag.Title = "Email Template";
    ViewBag.Page = "emailtemplate";
}



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Index", "EmailTemplate", FormMethod.Post, new { @class = "form-horizontal form-bordered", onsubmit = "showLoader(this);" }))
                {
                    <div class="panel-body">
                        <table class="table table-bordered table-striped mb-none" id="datatable-default">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Sender Name</th>
                                    <th>Sender Email</th>
                                    <th>Subject</th>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.lstResults.Count > 0)
                                {
                                    foreach (var item in Model.lstResults)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.SenderName</td>
                                            <td>@item.SenderEmail</td>
                                            <td>@item.EmailSubject</td>
                                            <td>
                                                <a href="~/EmailTemplate/Add/@item.Id" data-toggle="tooltip" data-placement="top" title="asdsad" data-original-title="Tooltip on top">
                                                    <i style="font-size:1.5em;color:red;" class="fa fa-pencil-alt"></i>
                                                </a> &nbsp;&nbsp;
                                                <a href="#" id="@item.Id" title="Delete" class="delete">
                                                    <i style="font-size:1.5em;color:red" class="fa fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>


                    </div>
                    @*<footer class="panel-footer"></footer>*@
                }
            </div>
        </section>


    </div>
</div>
@section scripts{
    @if (TempData["Message"] != null)
    {
        <script type="text/javascript">

                /**/
              @Html.Raw("successToast('Email Template Updated');")

        </script>
    }
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable-default').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: 'Search...',
                    sSearch: ''
                }
            });
            $('.delete').click(function () {
                if (confirm('Are you sure you want to delete this Template?')) {
                    //alert($(this).attr("id"));
                    $.ajax({
                        url: '/EmailTemplate/Delete',
                        type: "POST",
                        dataType: "json",
                        data: { TemplateId: $(this).attr("id") },
                        success: function (data) {
                            alert(data);
                            location.reload();
                        },
                        error: function (err) {

                            alert("Error:" + err.statusText);
                        }
                    });
                }
            });

        });
    </script>
}

