<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Codash Dashboard Template</title>

    <!-- favicons -->
    <link rel="icon" type="image/png" href="~/Theme/images/favicon.png">
    <link rel="apple-touch-icon" href="~/Theme/images/apple-touch-icon.png">


    <link href="~/Theme/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Theme/css/font-awesome.min.css" rel="stylesheet" />

    <link href="~/Theme/css/simplebar.min.css" rel="stylesheet" />
    @*=========================================================
        This Page Styles
        =========================================================*@
    @*morris chart
        <link rel="stylesheet" href="./assets/vendor/morris/css/morris.min.css">*@
    <!-- toastr -->
    <link href="~/Theme/css/jquery.toast.min.css" rel="stylesheet" />

    <!-- jquery steps  -->
    <link href="~/Theme/css/jquery.steps.min.css" rel="stylesheet" />
    @*Main Styles*@
    <link href="~/Theme/css/main.css?v=1.0" rel="stylesheet" />

    @*@Styles.Render("~/Theme/css")*@
    <style type="text/css">
        main .main-header .header-info {
            padding: 5px 30px;
        }

        main .content {
            margin-top: 15px;
            margin-left: 15px;
            margin-right: 15px;
        }
    </style>
</head>
<body>
    <div id='load' style="display:none;">
    </div>
    <div class="wrapper">
        <main>
            @*<div class="main-header">
                    <div class="header-info">
                        <h1 class="title">
                            @ViewBag.Title
                        </h1>
                    </div>
                </div>*@
            <div class="content">
                <div class="card">
                    <div class="card-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-error" style="font-weight:bold;color:red;">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                <h4>@TempData["Error"] </h4>
                            </div>
                        }
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
        <input type="hidden" id="currentPageId" value="@(ViewBag.Page ?? "home")" />
    </div>

    <!-- =========================================================-->
    <!-- All Scripts -->
    <!-- ========================================================= -->
    <!-- jquery -->
    <!--<script src="~/Theme/scripts/jquery-3.2.1.min.js"></script>-->
    <!-- bootstrap -->
    <!--<script src="~/Theme/scripts/popper.min.js"></script>
    <script src="~/Theme/scripts/bootstrap.min.js"></script>-->
    <!-- simplebar scroll -->
    <!--<script src="~/Theme/scripts/simplebar.min.js"></script>-->
    <!-- main js -->
    <!--<script src="~/Theme/scripts/main.js"></script>-->
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/bundles/CustomTheme")

    <script>
        var showLoader = function (form) {
            $("#load").show();
        }
        var successToast = function () {
            $.toast({
                heading: 'Success',
                text: 'New Vendor Added',
                showHideTransition: 'fade',
                icon: 'success',
                loaderBg: 'rgba(255,255,255,.8)',
                position: 'top-right'
            });
        };
        errorToast = function () {
            'use strict';
            $.toast({
                heading: 'Error',
                text: 'This is just a sample article. Specifies how the output will look.',
                showHideTransition: 'fade',
                icon: 'error',
                loaderBg: 'rgba(255,255,255,.8)',
                position: 'top-right'
            });
        };
    </script>
    <script>
        $(function () {
            var pageIdAttr = "data-menuPageId";
            var currentPage = $("#currentPageId").attr("value");
            var menu = $("#navmenu");
            $("#navmenu > li").removeClass('active');
            $("li[" + pageIdAttr + "=\"" + currentPage + "\"] > a", menu).addClass('active');
            //if (currentPage == 'search' || currentPage == 'summarybymember' || currentPage == 'summarybyproduct') {
            //    $(".nav-parent").addClass('nav-expanded');
            //}
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
